<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#333333"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <RelativeLayout
        android:id="@+id/ranking_bg"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/book_image"
            android:layout_width="69dp"
            android:layout_height="97dp"
            app:cardCornerRadius="2dp"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_image"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/book_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/book_image"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textColor="@color/font_dark_gray"
                android:text="茶花女"/>

            <TextView
                android:id="@+id/book_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:text="所经历的分解啊士大夫撒旦看风景洛杉矶的的数据分类数量大幅拉升的发了疯爱神的箭拉法基奥利弗所经历的分解啊士大夫撒旦看风景洛杉矶的的数据分类数量大幅拉升的发了疯爱神的箭拉法基奥利弗"
                android:textColor="#555555"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/book_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:textColor="#999999"
                android:text="xxxx年xx月xx日"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:src="@drawable/share"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>