<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/my_tool_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"

        >
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_back"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" />
    <TextView
        android:id="@+id/name_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人资料"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/my_tool_bar"
        android:id="@+id/my_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_common">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_mid_dark_gray"
                android:text="头像"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="@color/font_dark_gray"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/my_image"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/head"
                android:layout_marginRight="19.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_mid_dark_gray"
                android:text="昵称"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="@color/font_dark_gray"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="未设置"

                android:layout_marginRight="19.5dp"
                android:singleLine="true"
                android:background="@null"
                android:textColor="#999999"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_mid_dark_gray"
                android:text="性别"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="@color/font_dark_gray"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:layout_marginRight="19.5dp"
                android:background="@null"
                android:textColor="#999999"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_mid_dark_gray"
                android:text="生日"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="@color/font_dark_gray"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:layout_marginRight="19.5dp"
                android:background="@null"
                android:textColor="#999999"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_mid_dark_gray"
                android:text="手机"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="@color/font_dark_gray"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111111111"
                android:layout_marginRight="19.5dp"
                android:background="@null"
                android:textColor="#999999"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_mid_dark_gray"
                android:text="密码"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="@color/font_dark_gray"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:layout_marginRight="19.5dp"
                android:background="@null"
                android:textColor="#999999"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="101dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_mid_dark_gray"
                android:text="个人签名"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="@color/font_dark_gray" />

            <EditText
                android:id="@+id/signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="19.5dp"
                android:layout_marginTop="13.5dp"
                android:inputType="textMultiLine"
                android:background="@null"
                android:text="一句简短的签名，让别人更了解你"
                android:textColor="#999999"
                android:textSize="14sp"
                android:gravity="top"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.8"
        android:visibility="gone">

    <LinearLayout
        android:id="@+id/dialog_sex"
        android:orientation="vertical"
        android:layout_width="345dp"
        android:layout_height="192.5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_common"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="18sp"
                android:textColor="#999999"
                android:background="@drawable/selector_sex"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#999999"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="18sp"
                android:textColor="#999999"
                android:background="@drawable/selector_sex"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#999999"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="18sp"
                android:textColor="#333333" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>