<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/layout_buy_gold"
    android:background="@color/black_30"
    android:visibility="gone">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_common"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/btn_choice_close"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/btn_close"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tip"
            android:layout_width="302dp"
            android:layout_height="33dp"
            android:text="购买书币还差XXX个书币"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_shubi_tip"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="33dp">

            <View
                android:layout_width="26dp"
                android:layout_height="1.5dp"
                android:background="@color/color_999999"/>

            <TextView
                android:id="@+id/text_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X余额，请充值后购买"
                android:textColor="#E44649"
                android:textSize="11sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"/>

            <View
                android:layout_width="26dp"
                android:layout_height="1.5dp"
                android:background="@color/color_999999"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_shubi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"/>

    </LinearLayout>

</LinearLayout>