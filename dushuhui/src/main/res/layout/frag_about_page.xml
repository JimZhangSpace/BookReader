<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/name_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_common"
        android:paddingBottom="50dp">
        <ImageView
            android:layout_width="172.5dp"
            android:layout_height="44dp"
            android:src="@drawable/pic_logo"
            android:layout_marginTop="36.5dp"/>
        <TextView
            android:id="@+id/dushuhui_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.8.9版本"
            android:layout_marginTop="23dp"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#999999"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="32.5dp"
            android:layout_marginRight="32.5dp"
            android:text="    果麦经典读书会是基于移动互联网传播经典读物，以微小得力量改变文明，是业内先行者，我们的使命是帮助大家养成阅读习惯利用APP带领大家吸收书本精华内容。"
            android:lineSpacingExtra="4dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="32.5dp"
            android:layout_marginRight="32.5dp"
            android:text="    果麦经典读书会是基于移动互联网传播经典读物，以微小得力量改变文明，是业内先行者，我们的使命是帮助大家养成阅读习惯利用APP带领大家吸收书本精华内容。"
            android:lineSpacingExtra="4dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="25dp"/>
    </LinearLayout>

</LinearLayout>