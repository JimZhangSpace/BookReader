<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ranking_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/book_image"
        android:layout_width="102dp"
        android:layout_height="140dp"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="8.5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="93dp"
            android:layout_height="131dp"
            android:src="@drawable/default_image"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/book_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/book_image"
        android:layout_marginLeft="9.5dp"
        >
        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/font_17_gray"
            android:text="测试测试"/>
        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/font_small_mid_gray"
            android:text="测试测试"/>
        <TextView
            android:id="@+id/book_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/font_11_999999"
            android:layout_marginTop="15dp"
            android:text="所经历的分解啊士大夫撒旦看风景洛杉矶的的数据分类数量大幅拉升的发了疯爱神的箭拉法基奥利弗"
            android:layout_marginRight="9.5dp"
            android:lines="2"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="18dp">
            <TextView
                android:id="@+id/shubi_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200书币"
                android:textAppearance="@style/font_small_mid_gray"/>
            <View
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:background="@color/font_dark_gray"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <TextView
                android:id="@+id/shubi_shiji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100书币"
                android:textAppearance="@style/font_11_f46565"/>
        </LinearLayout>
        <TextView
            android:id="@+id/shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/font_9_f46565"
            android:text="限时特价：剩余xx天xx小时xx分xx秒"/>
    </LinearLayout>

    <TextView
        android:id="@+id/book_account"
        android:layout_width="63dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_account"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="限时XX折"
        android:textAppearance="@style/font_10_white"
        android:gravity="center"/>


</RelativeLayout>