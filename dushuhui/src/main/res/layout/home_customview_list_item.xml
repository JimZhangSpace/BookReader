<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_interval" />

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="11dp">

        <View
            android:id="@+id/dot_tag"
            android:layout_width="4dp"
            android:layout_height="15dp"
            android:background="@color/dot_before_customview"
            android:layout_alignBottom="@id/custom_title"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dot_tag"
            android:layout_centerVertical="true"
            android:textAppearance="@style/font_17_gray"
            android:text="小编荐书"
            android:layout_marginLeft="6dp"/>


        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:drawableRight="@drawable/ic_arrow_right"

            android:drawablePadding="5dp"
            android:textAppearance="@style/font_13_middark_gray"
            android:text="查看更多"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:gravity="center_vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/book_card_one"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#FBFBFB"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/url_1"
                    android:layout_width="110dp"
                    android:layout_height="139dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image"/>

                <TextView
                    android:id="@+id/book_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你好你好你好"
                    android:textAppearance="@style/font_13_dark_gray" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/book_card_two"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#FBFBFB"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/url_2"
                    android:layout_width="110dp"
                    android:layout_height="139dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image"/>

                <TextView
                    android:id="@+id/book_name_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你好你好你好"
                    android:textAppearance="@style/font_13_dark_gray" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/book_card_three"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#FBFBFB"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/url_3"
                    android:layout_width="110dp"
                    android:layout_height="139dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image"/>

                <TextView
                    android:id="@+id/book_name_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你好你好你好"
                    android:textAppearance="@style/font_13_dark_gray" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>