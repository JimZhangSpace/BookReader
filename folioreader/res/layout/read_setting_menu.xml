<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_height="wrap_content" android:orientation="vertical"
    >

<View
    android:background="#DDDDDD"
    android:layout_width="match_parent"
    android:layout_height="1px"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    >

    <ImageView
        android:id="@+id/read_light_small"
        android:src="@mipmap/read_light_small_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.xw.repo.BubbleSeekBar
        android:id="@+id/read_light_seekbar"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:bsb_max="255"
        app:bsb_min="0"
        android:background="@color/transparent"
        app:bsb_track_color="@color/read_bg_color"
        app:bsb_thumb_color="@color/read_progress_color"
        app:bsb_second_track_color="@color/read_progress_color"

        />

    <ImageView
        android:id="@+id/read_light_big"
        android:src="@mipmap/read_light_big_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
<View
    android:background="#DDDDDD"
    android:layout_width="match_parent"
    android:layout_height="1px"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp" android:orientation="horizontal" android:gravity="center_vertical">
    <ImageButton
        android:id="@+id/btn_font_small"
        android:layout_width="0dp"
        android:src="@mipmap/read_font_small_gray"
        android:background="@color/transparent"
        android:layout_height="match_parent" android:layout_weight="1" />


    <View
        android:background="#DDDDDD"
        android:layout_width="1px"
        android:layout_height="42dp"/>
    <ImageButton
        android:id="@+id/btn_font_big"
        android:layout_width="0dp"
        android:src="@mipmap/read_font_big_gray"
        android:background="@color/transparent"
        android:layout_height="match_parent" android:layout_weight="1" />

</LinearLayout>
<View
    android:background="#DDDDDD"
    android:layout_width="match_parent"
    android:layout_height="1px"/>
<LinearLayout
    android:id="@+id/layout_font_set"
    android:layout_width="match_parent"
    android:paddingLeft="28dp"
    android:paddingRight="28dp"
    android:layout_height="60dp" android:orientation="horizontal" android:gravity="center_vertical">
    <TextView
        android:id="@+id/tv_font_set_tip"
        android:text="字体"
        android:textAppearance="@style/font_mid_dark_gray"
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_current_font"
        android:text="字体"
        android:textColor="@color/font_light_gray"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_font_setting_arrow"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/read_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
<View
    android:background="#DDDDDD"
    android:layout_width="match_parent"
    android:layout_height="1px"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/layout_read_setting_white"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/cb_read_setting_white"
            android:button="@drawable/bg_read_setting_btn_white"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_read_setting_yellow"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/cb_read_setting_yellow"
            android:button="@drawable/bg_read_setting_btn_yellow"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_read_setting_brown"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/cb_read_setting_brown"
            android:button="@drawable/bg_read_setting_btn_brown"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_read_setting_blue"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/cb_read_setting_blue"
            android:button="@drawable/bg_read_setting_btn_blue"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_read_setting_black"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/cb_read_setting_black"
            android:button="@drawable/bg_read_setting_btn_black"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>


</LinearLayout>

